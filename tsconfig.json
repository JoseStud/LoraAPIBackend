{
  "extends": "@vue/tsconfig/tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["app/frontend/src/*"]
    },
    "types": ["vite/client"],
    "allowJs": false,
    "verbatimModuleSyntax": false
  },
  "include": [
    "app/frontend/src/env.d.ts",
    "vite.config.ts",
    "app/frontend/src/**/*.ts",
    "app/frontend/src/**/*.tsx",
    "app/frontend/src/**/*.vue",
    "app/frontend/src/**/*.d.ts"
  ],
  "exclude": ["node_modules", "app/dist", "dist"]
}
