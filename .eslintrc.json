{
  "env": {
    "browser": true,
    "es2021": true,
    "jest": true
  },
  "extends": [
    "eslint:recommended"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": [
    "alpinejs"
  ],
  "rules": {
    "no-unused-vars": ["warn", { "argsIgnorePattern": "^_" }],
    "no-console": "warn",
    "no-debugger": "error",
    "prefer-const": "warn",
    "no-var": "error"
  },
  "globals": {
    "Alpine": "readonly",
    "htmx": "readonly",
    "Chart": "readonly",
    "HTMXUtils": "readonly",
    "LoRAManager": "readonly",
    "module": "writable"
  },
  "ignorePatterns": [
    "node_modules/",
    "coverage/",
    "dist/",
    "vendor/",
    "*.min.js",
    "tests/"
  ]
}
