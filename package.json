{
  "name": "lora-manager-frontend",
  "version": "2.1.0",
  "description": "Frontend assets for LoRA Manager - AI-Powered LoRA Management System",
  "scripts": {
    "build:css": "tailwindcss -i ./app/frontend/static/css/input.css -o ./app/frontend/static/css/styles.css --minify",
    "watch:css": "tailwindcss -i ./app/frontend/static/css/input.css -o ./app/frontend/static/css/styles.css --watch",
    "dev": "npm run watch:css",
    "test": "npm run test:unit && npm run test:integration && npm run test:e2e",
    "test:unit": "jest tests/unit --coverage",
    "test:integration": "jest tests/integration",
    "test:e2e": "playwright test",
    "test:performance": "lighthouse-ci",
    "test:coverage": "jest --coverage --coverageReporters=text-lcov | coveralls",
    "test:watch": "jest --watch",
    "lint": "eslint app/frontend/static/js --ext .js --cache --cache-location .cache/eslint",
    "lint:fix": "eslint app/frontend/static/js --ext .js --fix --cache --cache-location .cache/eslint",
    "audit": "npm audit",
    "validate": "npm run lint && npm run test"
  },
  "devDependencies": {
    "@lhci/cli": "^0.13.0",
    "@playwright/test": "^1.55.0",
    "@tailwindcss/forms": "^0.5.6",
    "@tailwindcss/typography": "^0.5.10",
    "@testing-library/dom": "^9.3.4",
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/user-event": "^14.5.1",
    "coveralls": "^3.1.1",
    "eslint": "^8.55.0",
    "eslint-plugin-alpinejs": "^1.1.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "puppeteer": "^21.6.1",
    "supertest": "^6.3.3",
    "tailwindcss": "^3.3.6"
  },
  "dependencies": {
    "alpinejs": "^3.13.3",
    "chart.js": "^4.4.0",
    "htmx.org": "^1.9.6"
  },
  "keywords": [
    "lora",
    "ai",
    "machine-learning",
    "fastapi",
    "frontend",
    "htmx",
    "alpine",
    "tailwind",
    "pwa",
    "testing"
  ],
  "author": "LoRA Manager Team",
  "license": "MIT"
}
